{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots" : ["./node_modules/@types", "./typings"],
        "target": "es6",
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "outDir": "./dist/",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
