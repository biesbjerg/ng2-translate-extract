{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "target": "es5",
    "lib": [
        "dom",
        "es2015"
    ],
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
