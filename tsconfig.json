{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        // I had to do this to support gettext-parser typing with mocha
        // "noImplicitAny": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "removeComments": true,
        "declaration": true,
        "target": "es2015",
        "lib": [
            "dom",
            "esnext.array"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots" : [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": []
}
